{
  "compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"target": "ES2020",
		"outDir": "dist",
		"rootDir": "src",
		"esModuleInterop": true,
		"noImplicitOverride": true,
		"importHelpers": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
	},
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
